<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

        <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            <!-- 이미지뷰 -->
            <ImageView
                    android:layout_width="360dp"
                    android:layout_height="73dp"
                    android:layout_gravity="left"
                    android:src="@drawable/reco_header" />

            <!-- 버튼 -->
            <Button
                    android:id="@+id/backToMainButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/welcome_rectangle"
                    style="@style/backtomain"
                    android:text="메인화면으로 돌아가기" />
        </FrameLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/like_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@android:color/transparent"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="#000000"
                    app:tabTextColor="#ffffff">

                <com.google.android.material.tabs.TabItem
                        android:id="@+id/color_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Color" />

                <com.google.android.material.tabs.TabItem
                        android:id="@+id/closet_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cloth Type" />

            </com.google.android.material.tabs.TabLayout>

            <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_below="@+id/show_like"
                    android:layout_width="439dp"
                    android:layout_height="658dp" />

        </LinearLayout>


    </LinearLayout>
</layout>
